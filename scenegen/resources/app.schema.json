{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Application description generation",
  "description": "Description of an application",
  "required": [
    "name",
    "features",
    "platform",
    "graphics",
    "start_scene_id"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "clip_planes"
        ]
      }
    },
    "platform": {
      "type": "string",
      "enum": [
        "windows"
      ]
    },
    "graphics": {
      "type": "string",
      "enum": [
        "vulkan"
      ]
    }
  }
}