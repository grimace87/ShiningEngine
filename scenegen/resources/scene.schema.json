{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Application scene generation",
  "description": "Description of rendering requirements for a scene in an application",
  "required": [
    "id",
    "camera",
    "resources",
    "passes"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "camera": {
      "type": "string",
      "enum": [
        "player",
        "flight_path"
      ]
    },
    "resources": {
      "type": "object",
      "required": [
        "models",
        "textures",
        "fonts"
      ],
      "properties": {
        "models": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id"
            ],
            "id": {
              "type": "string"
            },
            "file": {
              "type": "string"
            },
            "generator": {
              "type": "string",
              "enum": [
                "skybox",
                "text"
              ]
            }
          }
        },
        "textures": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "format": {
                "type": "string",
                "enum": [
                  "r8",
                  "rgb8",
                  "rgba8",
                  "d16"
                ]
              },
              "file": {
                "type": "string"
              },
              "kind": {
                "type": "string",
                "enum": [
                  "cubemap",
                  "uninitialised"
                ]
              }
            }
          }
        },
        "fonts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "file",
              "texture_id"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "file": {
                "type": "string"
              },
              "texture_id": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "passes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "kind",
          "steps"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "kind": {
            "type": "string",
            "enum": [
              "default",
              "offscreen"
            ]
          },
          "target_texture_ids": {
            "type": "object",
            "required": [
              "colour_texture_id"
            ],
            "properties": {
              "colour_texture_id": {
                "type": "string"
              },
              "depth_texture_id": {
                "type": "string"
              }
            }
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "render",
                "model_id",
                "texture_ids"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "render": {
                  "type": "string",
                  "enum": [
                    "basic_textured",
                    "text_paint",
                    "reflection_pre_render"
                  ]
                },
                "model_id": {
                  "type": "string"
                },
                "texture_ids": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}