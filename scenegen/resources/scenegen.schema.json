{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Application renderer generation",
  "description": "Description of rendering requirements for all scenes in an application",
  "required": [
    "app",
    "scenes"
  ],
  "properties": {
    "app": {
      "type": "object",
      "required": [
        "name",
        "features"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "features": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "clip_planes"
            ]
          }
        }
      }
    },
    "scenes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "camera",
          "resources",
          "passes"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "camera": {
            "type": "string",
            "enum": [
              "player",
              "flight_path"
            ]
          },
          "resources": {
            "type": "object",
            "required": [
              "models",
              "textures",
              "fonts"
            ],
            "properties": {
              "models": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "id"
                  ],
                  "id": {
                    "type": "string"
                  },
                  "file": {
                    "type": "string"
                  },
                  "generator": {
                    "type": "string"
                  }
                }
              },
              "textures": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "id"
                  ],
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "file": {
                      "type": "string"
                    },
                    "kind": {
                      "type": "string",
                      "enum": [
                        "cubemap",
                        "uninitialised"
                      ]
                    }
                  }
                }
              },
              "fonts": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "id",
                    "file",
                    "texture_id"
                  ],
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "file": {
                      "type": "string"
                    },
                    "texture_id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "passes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "kind",
                "render",
                "steps"
              ],
              "properties": {
                "kind": {
                  "type": "string",
                  "enum": [
                    "default",
                    "offscreen"
                  ]
                },
                "target_texture_id": {
                  "type": "string"
                },
                "render": {
                  "type": "string",
                  "enum": [
                    "basic_textured",
                    "reflection_pre_render"
                  ]
                },
                "steps": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "model_id",
                      "texture_ids"
                    ],
                    "properties": {
                      "model_id": {
                        "type": "string"
                      },
                      "texture_ids": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}